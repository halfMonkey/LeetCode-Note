#92. Reverse Linked List II
#https://leetcode.com/problems/reverse-linked-list-ii/

class Solution:
    def reverseBetween(self, head, m, n):
        # Empty list
        if not head:
            return None

        cur, prev = head, None
        while m > 1:
            prev = cur
            cur = cur.next
            m, n = m - 1, n - 1

        tail, con = cur, prev
        while n:
            third = cur.next
            cur.next = prev
            prev = cur
            cur = third
            n -= 1

        if con:
            con.next = prev
        else:
            head = prev
        tail.next = cur
        return head